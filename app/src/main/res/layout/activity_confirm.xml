<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fahadalisyed.logit.Home.Confirm">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Activity"
            android:id="@+id/logItemNameHolder"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logItemName"
            android:layout_below="@+id/logItemNameHolder"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Description"
            android:id="@+id/logItemDescriptionHolder"
            android:layout_below="@+id/logItemName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logItemDescription"
            android:layout_below="@+id/logItemDescriptionHolder"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Duration"
            android:id="@+id/duration"
            android:layout_below="@+id/logItemDescription"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/logItemDescription"
            android:layout_alignEnd="@+id/logItemDescription"
            android:layout_below="@+id/duration"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Start"
                android:id="@+id/StartHolder"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Date"
                android:id="@+id/startDate"
                android:layout_below="@+id/StartHolder"
                android:layout_toRightOf="@+id/StartHolder"
                android:layout_toEndOf="@+id/StartHolder"
                android:paddingTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Time"
                android:id="@+id/startTime"
                android:layout_below="@+id/startDate"
                android:layout_alignLeft="@+id/startDate"
                android:layout_alignStart="@+id/startDate"
                android:paddingTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="End"
                android:id="@+id/EndHolder"
                android:layout_below="@+id/startTime"
                android:paddingTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Date"
                android:id="@+id/endDate"
                android:layout_below="@+id/EndHolder"
                android:layout_alignLeft="@+id/endTime"
                android:layout_alignStart="@+id/endTime"
                android:paddingTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Time"
                android:id="@+id/endTime"
                android:layout_below="@+id/endDate"
                android:layout_alignLeft="@+id/startDate"
                android:layout_alignStart="@+id/startDate"
                android:paddingTop="5dp"/>

            <com.dd.CircularProgressButton
                android:id="@+id/calendarProgressButton"
                android:layout_width="196dp"
                android:layout_height="64dp"
                android:textColor="@color/cpb_white"
                android:textSize="18sp"
                android:onClick="saveToCalendar"
                app:cpb_textComplete="Saved to Calendar"
                app:cpb_textError="No Network"
                app:cpb_textIdle="Save"
                app:cpb_cornerRadius="48dp"
                app:cpb_iconComplete="@drawable/ic_action_done"
                app:cpb_iconError="@drawable/ic_content_clear"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

</RelativeLayout>
